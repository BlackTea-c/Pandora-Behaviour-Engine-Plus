<UserControl x:Class="Pandora.MVVM.View.Controls.LogBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pandora.MVVM.View.Controls" xmlns:viewmodel="clr-namespace:Pandora.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:EngineViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    
    <Border CornerRadius="10">
        <Border.Background>
            <SolidColorBrush Color="#212121"  
                             Opacity=".5"></SolidColorBrush>
        </Border.Background>
        <TextBox Background="Transparent" 
                 Margin ="5 5 5 5" 
                 BorderThickness="0"
                 FontFamily="Corbet"
                 FontSize="13"
                 Text="{ Binding LogText,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <TextBox.Foreground>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="White" Offset="0.0" />

                    <GradientStop Color="Pink" Offset="1" />
                </LinearGradientBrush>
            </TextBox.Foreground>
        </TextBox>
    </Border>
</UserControl>
