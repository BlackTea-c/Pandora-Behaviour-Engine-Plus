<UserControl x:Class="Pandora.MVVM.View.Controls.LaunchButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pandora.MVVM.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="256">
    <Grid>
        <Button 
            Background="{StaticResource ControlColor}"
            Foreground="{StaticResource HeaderTextGradient}"
            Command="{Binding LaunchCommand}"
            HorizontalAlignment="Stretch"
            Style="{StaticResource PrimaryButtonStyle}">
            Launch

        </Button>
    </Grid>
</UserControl>
